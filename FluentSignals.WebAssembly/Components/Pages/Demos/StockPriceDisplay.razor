@using FluentSignals.WebAssembly.Components.Pages.Demos.Models

<div class="stock-price-display">
    <div class="price-main">
        <h2 class="price mb-0">$@Stock.Price.ToString("F2")</h2>
        <div class="@(Stock.Change >= 0 ? "text-success" : "text-danger")">
            <span class="change">@Stock.Change.ToString("+0.00;-0.00")</span>
            <span class="change-percent">(@Stock.ChangePercent.ToString("+0.00;-0.00")%)</span>
            @if (Stock.Change >= 0)
            {
                <i class="bi bi-arrow-up-circle-fill"></i>
            }
            else
            {
                <i class="bi bi-arrow-down-circle-fill"></i>
            }
        </div>
    </div>
    
    <div class="price-details mt-3">
        <div class="row g-2">
            <div class="col-6">
                <small class="text-muted d-block">Open</small>
                <strong>$@Stock.Open.ToString("F2")</strong>
            </div>
            <div class="col-6">
                <small class="text-muted d-block">Volume</small>
                <strong>@((Stock.Volume / 1_000_000.0).ToString("F1"))M</strong>
            </div>
            <div class="col-6">
                <small class="text-muted d-block">High</small>
                <strong>$@Stock.High.ToString("F2")</strong>
            </div>
            <div class="col-6">
                <small class="text-muted d-block">Low</small>
                <strong>$@Stock.Low.ToString("F2")</strong>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <small class="text-muted">
            <i class="bi bi-clock"></i> Last updated: @Stock.LastUpdate.ToString("HH:mm:ss")
        </small>
    </div>
</div>

<style>
    .stock-price-display .price {
        font-size: 2rem;
        font-weight: 700;
    }
    
    .stock-price-display .change {
        font-size: 1.2rem;
        font-weight: 600;
    }
    
    .stock-price-display .change-percent {
        font-size: 1rem;
    }
    
    .stock-price-display .price-details {
        border-top: 1px solid #dee2e6;
        padding-top: 1rem;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public StockPrice Stock { get; set; } = null!;
}