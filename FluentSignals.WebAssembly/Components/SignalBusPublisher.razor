@using FluentSignals.Blazor.SignalBus
@using FluentSignals.WebAssembly.Models

<div class="publisher-content">
    <h4>Add New Person</h4>
    
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" @bind="name" placeholder="Enter name" />
    </div>
    
    <div class="form-group">
        <label>Age:</label>
        <input type="number" class="form-control" @bind="age" placeholder="Enter age" />
    </div>
    
    <button class="btn btn-primary" @onclick="AddPerson" disabled="@isPublishing">
        @if (isPublishing)
        {
            <span>Publishing...</span>
        }
        else
        {
            <span>Add Person</span>
        }
    </button>

    @if (lastPublished != null)
    {
        <div class="last-published">
            <small>Last published: @lastPublished.Name (@lastPublished.Age) at @lastPublished.CreatedAt.ToString("HH:mm:ss")</small>
        </div>
    }
</div>

@code {
    [Inject] private ISignalPublisher SignalPublisher { get; set; } = default!;
    
    private string name = "";
    private int age = 25;
    private bool isPublishing = false;
    private PersonForAddDto? lastPublished;

    private async Task AddPerson()
    {
        if (string.IsNullOrWhiteSpace(name))
        {
            return;
        }

        isPublishing = true;
        StateHasChanged();

        try
        {
            var person = new PersonForAddDto(name, age);
            await SignalPublisher.PublishAsync(person);
            
            lastPublished = person;
            
            // Reset form
            name = "";
            age = 25;
        }
        finally
        {
            isPublishing = false;
            StateHasChanged();
        }
    }
}

<style>
    .publisher-content {
        max-width: 400px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.25rem;
        font-weight: 600;
        color: #475569;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        font-size: 1rem;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .last-published {
        margin-top: 1rem;
        padding: 0.75rem;
        background: #f0f9ff;
        border-radius: 6px;
        color: #1e40af;
    }
</style>