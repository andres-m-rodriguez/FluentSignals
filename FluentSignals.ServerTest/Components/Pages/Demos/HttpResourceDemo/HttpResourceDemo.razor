@page "/demos/http-resource"
@rendermode InteractiveServer
@using FluentSignals.Options.HttpResource
@using FluentSignals.Blazor.Components
@using FluentSignals.Blazor.Extensions
@using FluentSignals.ServerTest.Components
@using FluentSignals.ServerTest.Controllers
@using FluentSignals.ServerTest.Components.Pages.Demos.HttpResourceDemo.Components


@inject NavigationManager Navigation

<div class="demo-page">

    <div class="page-header">
        <h1>HttpResource Demo</h1>
        <p class="lead">Reactive HTTP operations with built-in state management and error handling</p>
    </div>


    <DemoSection Title="Basic HTTP Resource"
                 Description="Use HttpResourceView component for declarative data fetching"
                 RazorCode="@BasicHttpResourceDemo.CodeExample">
        <Demo>
            <BasicHttpResourceDemo />
        </Demo>
    </DemoSection>

    <DemoSection Title="HTTP Error Handling"
                 Description="Handle different HTTP status codes with custom UI"
                 RazorCode="@HttpErrorHandlingDemo.CodeExample">
        <Demo>
            <HttpErrorHandlingDemo />
        </Demo>
    </DemoSection>

    <DemoSection Title="Programmatic HTTP Resource"
                 Description="Use HttpResource directly for more control"
                 CSharpCode="@ProgrammaticHttpResourceDemo.CodeExample">
        <Demo>
            <ProgrammaticHttpResourceDemo />
        </Demo>
    </DemoSection>

</div>

<style>
    /* Page-level styles only */
    .demo-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .lead {
        font-size: 1.25rem;
        color: #64748b;
    }
</style>