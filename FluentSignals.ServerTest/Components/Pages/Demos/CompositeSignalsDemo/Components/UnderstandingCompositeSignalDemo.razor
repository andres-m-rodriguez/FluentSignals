@namespace FluentSignals.ServerTest.Components.Pages.Demos.CompositeSignalsDemo.Components
@using FluentSignals.Blazor.Components
@using FluentSignals.Implementations.Core
@using FluentSignals.Contracts
@using FluentSignals.ServerTest.Components
@using FluentSignals.Blazor.Extensions
@inherits SignalComponentBase
@rendermode InteractiveServer

<div class="demo-content">
            <div class="concept-box">
                <h4>What is a Composite Signal?</h4>
                <p>A composite signal is a signal that contains other signals internally. When you subscribe to a composite signal, you can automatically subscribe to all its internal signals.</p>
                
                <div class="benefits-list">
                    <h5>Benefits:</h5>
                    <ul>
                        <li>Simplified subscription management</li>
                        <li>Automatic cleanup of all internal subscriptions</li>
                        <li>Consistent state management across related signals</li>
                        <li>Reduced boilerplate code</li>
                    </ul>
                </div>
            </div>

    <CodeBlock Code="@iCompositeSignalCode" />
</div>

@code {
    private string iCompositeSignalCode = @"using FluentSignals.Contracts;

/// <summary>
/// Defines a contract for signals that contain other internal signals.
/// This allows composite signals to expose their internal signals for subscription.
/// </summary>
public interface ICompositeSignal
{
    /// <summary>
    /// Gets all internal signals that should be subscribed to when 
    /// this composite signal is used.
    /// </summary>
    IEnumerable<ISignal> GetInternalSignals();
}

// Usage example:
public void SubscribeToComposite(ICompositeSignal compositeSignal)
{
    // Subscribe to all internal signals with a single loop
    foreach (var signal in compositeSignal.GetInternalSignals())
    {
        signal.Subscribe(_ => InvokeAsync(StateHasChanged));
    }
}";
}

