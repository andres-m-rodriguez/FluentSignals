@namespace FluentSignals.ServerTest.Components

<div class="code-block @Class">
    <div class="code-header">
        @if (!string.IsNullOrEmpty(Title))
        {
            <span class="code-title">@Title</span>
        }
        @if (!string.IsNullOrEmpty(Language))
        {
            <span class="code-language">@Language</span>
        }
    </div>
    <pre class="code-pre"><code class="language-@Language">@Code</code></pre>
</div>

@code {
    [Parameter] public string Code { get; set; } = "";
    [Parameter] public string Language { get; set; } = "csharp";
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Class { get; set; }
}

<style>
    .code-block {
        border-radius: 8px;
        overflow: hidden;
        background: #1e1e1e;
        margin: 1rem 0;
    }

    .code-header {
        padding: 0.5rem 1rem;
        background: #2d2d30;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.875rem;
    }

    .code-title {
        color: #cccccc;
        font-weight: 500;
    }

    .code-language {
        color: #9ca3af;
        font-size: 0.75rem;
        text-transform: uppercase;
    }

    .code-pre {
        margin: 0;
        padding: 1rem;
        overflow-x: auto;
    }

    .code-pre code {
        color: #d4d4d4;
        font-family: 'Cascadia Code', 'Fira Code', monospace;
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .code-block.inline {
        display: inline-block;
        margin: 0;
    }

    .code-block.inline .code-pre {
        padding: 0.25rem 0.5rem;
    }
</style>