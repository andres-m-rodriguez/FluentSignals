@namespace FluentSignals.ServerTest.Components

<div class="demo-section">
    <div class="demo-header">
        <h2 class="demo-title">@Title</h2>
        @if (!string.IsNullOrEmpty(Description))
        {
            <p class="demo-description">@Description</p>
        }
    </div>
    
    <div class="demo-container @(ShowCodeFirst ? "code-first" : "demo-first")">
        <div class="demo-panel demo-preview">
            <div class="panel-header">
                <h3>Live Demo</h3>
                @if (Actions != null)
                {
                    <div class="panel-actions">
                        @Actions
                    </div>
                }
            </div>
            <div class="panel-body">
                @Demo
            </div>
        </div>
        
        <div class="demo-panel demo-code">
            <div class="panel-header">
                <h3>Code</h3>
                <div class="code-tabs">
                    @if (!string.IsNullOrEmpty(RazorCode))
                    {
                        <button class="@GetTabClass("razor")" @onclick="@(() => SetActiveTab("razor"))">
                            Razor
                        </button>
                    }
                    @if (!string.IsNullOrEmpty(CSharpCode))
                    {
                        <button class="@GetTabClass("csharp")" @onclick="@(() => SetActiveTab("csharp"))">
                            C#
                        </button>
                    }
                    <button class="copy-button" @onclick="CopyToClipboard" title="Copy to clipboard">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="panel-body">
                @if (_activeTab == "razor" && !string.IsNullOrEmpty(RazorCode))
                {
                    <CodeBlock Code="@RazorCode" Language="razor" />
                }
                else if (_activeTab == "csharp" && !string.IsNullOrEmpty(CSharpCode))
                {
                    <CodeBlock Code="@CSharpCode" Language="csharp" />
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = "";
    [Parameter] public string? Description { get; set; }
    [Parameter, EditorRequired] public RenderFragment Demo { get; set; } = null!;
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public string? RazorCode { get; set; }
    [Parameter] public string? CSharpCode { get; set; }
    [Parameter] public bool ShowCodeFirst { get; set; } = false;

    private string _activeTab = "csharp";

    protected override void OnInitialized()
    {
        // Set default tab based on available code
        if (!string.IsNullOrEmpty(RazorCode))
        {
            _activeTab = "razor";
        }
        else if (!string.IsNullOrEmpty(CSharpCode))
        {
            _activeTab = "csharp";
        }
    }

    private void CopyToClipboard()
    {
        var codeToCopy = _activeTab == "razor" ? RazorCode : CSharpCode;
        if (!string.IsNullOrEmpty(codeToCopy))
        {
            // In a real app, you'd use JS interop to copy to clipboard
            // For now, we'll just show the copy button was clicked
            StateHasChanged();
        }
    }

    private string GetTabClass(string tabName)
    {
        return $"tab-button {(_activeTab == tabName ? "active" : "")}";
    }

    private void SetActiveTab(string tabName)
    {
        _activeTab = tabName;
    }
}
