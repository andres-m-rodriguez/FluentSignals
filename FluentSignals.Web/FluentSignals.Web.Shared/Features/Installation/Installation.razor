@page "/installation"
@namespace FluentSignals.Web.Shared.Features.Installation

<PageTitle>Installation - FluentSignals</PageTitle>

<div class="installation-page">
    <div class="page-hero">
        <h1 class="page-title">Installation</h1>
        <p class="page-subtitle">Get started with FluentSignals in your .NET project</p>
    </div>

    <section class="install-section">
        <h2>Package Overview</h2>
        <p>FluentSignals is distributed as a set of NuGet packages, each serving a specific purpose:</p>
        
        <div class="package-grid">
            <div class="package-card">
                <h3>FluentSignals</h3>
                <p class="package-description">Core reactive state management library with signals, computed values, and async operations.</p>
                <div class="package-install">
                    <code>dotnet add package FluentSignals</code>
                </div>
            </div>

            <div class="package-card">
                <h3>FluentSignals.Blazor</h3>
                <p class="package-description">Blazor integration with components, helpers, and UI utilities.</p>
                <div class="package-install">
                    <code>dotnet add package FluentSignals.Blazor</code>
                </div>
            </div>

            <div class="package-card">
                <h3>FluentSignals.Http</h3>
                <p class="package-description">HTTP client extensions with reactive resources, typed clients, interceptors, and caching.</p>
                <div class="package-install">
                    <code>dotnet add package FluentSignals.Http</code>
                </div>
            </div>

            <div class="package-card">
                <h3>FluentSignals.SignalBus</h3>
                <p class="package-description">Event bus implementation for publish/subscribe patterns and message queuing.</p>
                <div class="package-install">
                    <code>dotnet add package FluentSignals.SignalBus</code>
                </div>
            </div>

            <div class="package-card">
                <h3>FluentSignals.SignalR</h3>
                <p class="package-description">SignalR integration for real-time reactive resources with automatic reconnection.</p>
                <div class="package-install">
                    <code>dotnet add package FluentSignals.SignalR</code>
                </div>
            </div>
        </div>
    </section>

    <section class="install-section">
        <h2>Quick Start</h2>
        
        <div class="install-option">
            <h3>Using .NET CLI</h3>
            <div class="code-block">
                <pre><code><span class="comment"># Install the core package</span>
dotnet add package FluentSignals

<span class="comment"># For Blazor applications</span>
dotnet add package FluentSignals.Blazor

<span class="comment"># For HTTP operations</span>
dotnet add package FluentSignals.Http

<span class="comment"># For real-time features</span>
dotnet add package FluentSignals.SignalR

<span class="comment"># For event bus patterns</span>
dotnet add package FluentSignals.SignalBus</code></pre>
            </div>
        </div>

        <div class="install-option">
            <h3>Using Package Manager</h3>
            <div class="code-block">
                <pre><code><span class="comment"># Install the core package</span>
Install-Package FluentSignals

<span class="comment"># For Blazor applications</span>
Install-Package FluentSignals.Blazor

<span class="comment"># For HTTP operations</span>
Install-Package FluentSignals.Http

<span class="comment"># For real-time features</span>
Install-Package FluentSignals.SignalR

<span class="comment"># For event bus patterns</span>
Install-Package FluentSignals.SignalBus</code></pre>
            </div>
        </div>

        <div class="install-option">
            <h3>Using PackageReference</h3>
            <div class="code-block">
                <pre><code><span class="tag">&lt;ItemGroup&gt;</span>
  <span class="tag">&lt;PackageReference</span> <span class="attr">Include</span>=<span class="string">"FluentSignals"</span> <span class="attr">Version</span>=<span class="string">"2.0.0"</span> <span class="tag">/&gt;</span>
  <span class="tag">&lt;PackageReference</span> <span class="attr">Include</span>=<span class="string">"FluentSignals.Blazor"</span> <span class="attr">Version</span>=<span class="string">"2.0.0"</span> <span class="tag">/&gt;</span>
  <span class="tag">&lt;PackageReference</span> <span class="attr">Include</span>=<span class="string">"FluentSignals.Http"</span> <span class="attr">Version</span>=<span class="string">"2.0.0"</span> <span class="tag">/&gt;</span>
  <span class="tag">&lt;PackageReference</span> <span class="attr">Include</span>=<span class="string">"FluentSignals.SignalR"</span> <span class="attr">Version</span>=<span class="string">"2.0.0"</span> <span class="tag">/&gt;</span>
  <span class="tag">&lt;PackageReference</span> <span class="attr">Include</span>=<span class="string">"FluentSignals.SignalBus"</span> <span class="attr">Version</span>=<span class="string">"2.0.0"</span> <span class="tag">/&gt;</span>
<span class="tag">&lt;/ItemGroup&gt;</span></code></pre>
            </div>
        </div>
    </section>

    <section class="install-section">
        <h2>Common Installation Scenarios</h2>
        
        <div class="scenario">
            <h3>Blazor Application</h3>
            <p>For a typical Blazor application with API integration:</p>
            <div class="code-block">
                <pre><code>dotnet add package FluentSignals.Blazor
dotnet add package FluentSignals.Http</code></pre>
            </div>
        </div>

        <div class="scenario">
            <h3>Real-time Dashboard</h3>
            <p>For applications with real-time updates:</p>
            <div class="code-block">
                <pre><code>dotnet add package FluentSignals.Blazor
dotnet add package FluentSignals.SignalR
dotnet add package FluentSignals.Http</code></pre>
            </div>
        </div>

        <div class="scenario">
            <h3>Console Application</h3>
            <p>For console apps or background services:</p>
            <div class="code-block">
                <pre><code>dotnet add package FluentSignals
dotnet add package FluentSignals.Http
dotnet add package FluentSignals.SignalBus</code></pre>
            </div>
        </div>
    </section>

    <section class="install-section">
        <h2>Configuration</h2>
        
        <div class="config-example">
            <h3>Blazor Setup</h3>
            <p>Add FluentSignals services in your Program.cs:</p>
            <div class="code-block">
                <pre><code><span class="keyword">using</span> FluentSignals.Extensions;
<span class="keyword">using</span> FluentSignals.Blazor.Extensions;

<span class="keyword">var</span> builder = WebApplication.CreateBuilder(args);

<span class="comment">// Add FluentSignals services</span>
builder.Services.<span class="method">AddFluentSignals</span>();
builder.Services.<span class="method">AddFluentSignalsBlazor</span>();

<span class="comment">// Add HTTP services if using FluentSignals.Http</span>
builder.Services.<span class="method">AddFluentSignalsHttp</span>(options =>
{
    options.BaseUrl = <span class="string">"https://api.example.com"</span>;
    options.DefaultTimeout = TimeSpan.FromSeconds(<span class="number">30</span>);
});

<span class="comment">// Add SignalR if using real-time features</span>
builder.Services.<span class="method">AddFluentSignalsSignalR</span>();

<span class="comment">// Add SignalBus if using event patterns</span>
builder.Services.<span class="method">AddSignalBus</span>();</code></pre>
            </div>
        </div>

        <div class="config-example">
            <h3>Dependency Injection</h3>
            <p>Register your signals and resources:</p>
            <div class="code-block">
                <pre><code><span class="comment">// Register signals as scoped or singleton</span>
builder.Services.AddScoped&lt;<span class="type">Signal</span>&lt;<span class="keyword">int</span>&gt;&gt;();
builder.Services.AddSingleton&lt;<span class="type">TypedSignal</span>&lt;<span class="type">AppState</span>&gt;&gt;();

<span class="comment">// Register HTTP resources</span>
builder.Services.AddScoped&lt;<span class="type">ITypedHttpResource</span>&lt;<span class="type">User</span>&gt;&gt;(sp =>
{
    <span class="keyword">var</span> factory = sp.GetRequiredService&lt;<span class="type">ITypedHttpResourceFactory</span>&gt;();
    <span class="keyword">return</span> factory.Create&lt;<span class="type">User</span>&gt;(<span class="string">"/api/users"</span>);
});</code></pre>
            </div>
        </div>
    </section>

    <section class="install-section">
        <h2>Next Steps</h2>
        <div class="next-actions">
